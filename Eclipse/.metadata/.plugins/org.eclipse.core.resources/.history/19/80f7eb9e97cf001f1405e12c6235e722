import java.util.LinkedList;
import java.util.ListIterator;


public class Node {
	String name;
	LinkedList<Node> knoten;
	Node(String s){
		name = s;
		knoten = new LinkedList<Node>();
	}
	String getName(){
		return name;
	}
	void connect(Node r){
		knoten.add(r);
		r.knoten.add(this);
	}
	boolean disconnect(Node r){
		if (knoten.remove(r)){
			return r.knoten.remove(this);
		}
		return false;
	}
	void print(){
		System.out.printf(name);
		System.out.printf(" Verbundene Knoten: ");
		ListIterator<Node> iter = knoten.listIterator();
		while (iter.hasNext()){
			Node temp = iter.next();
			System.out.printf(temp.name);
			System.out.printf(" ")
;		}
		System.out.printf("%n");
	}
	
	
	public static void main(String[] args) {
		Node a = new Node("a");
		Node b = new Node("b");
		Node c = new Node("c");
		Node d = new Node("d");
		Node e = new Node("e");
		Node f = new Node("f");
		Node g = new Node("g");
		
		a.connect(b);
		a.connect(d);
		a.connect(c);
		d.connect(b);
		d.connect(e);
		b.connect(c);
		b.connect(e);
		e.connect(e);
		c.connect(f);
		f.connect(g);
		f.connect(g);
		
		a.print();
		b.print();
		c.print();
		d.print();
		e.print();
		f.print();
		g.print();
	}
}
