import de.uni_potsdam.hpi.wfapp2011.general.ProcessIdentifier;
import de.uni_potsdam.hpi.wfapp2011.general.ProcessIdentifierException;


public class TestAdminLogging{
	private AdminLogger logging;
	private ProcessIdentifier processIdentifier;
	
	@Before
	public void setUp() {
		logging = AdminLogger.getInstance();
		processIdentifier = new ProcessIdentifier("Ba", "SS", 2014);
		
	}
	@SuppressWarnings("deprecation")
	@Test(expected = ProcessIdentifierException.class) 
	public void testLogging() throws ProcessIdentifierException{
		processIdentifier = new ProcessIdentifier("Ba", "ww", 2014);
		Date changeDate = new Date();
		String email = "test@example.de";
		String deadlineType = Constants.DEADLINE_PROPOSAL_COL;
		Date deadline = new Date();
		deadline.setDate(deadline.getDay() + 1);
		logging.logNewDeadlineEntry(processIdentifier, email, deadlineType, deadline);
	}
	

}
