<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>VotingDatabaseService</servlet-name>
    <servlet-class>de.uni_potsdam.hpi.wfapp2011.voting.server.VotingDatabaseServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>VotingDatabaseService</servlet-name>
    <url-pattern>/voting/VotingDatabaseService</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Voting.html</welcome-file>
  </welcome-file-list>
  
  	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>de.uni_potsdam.hpi.wfapp2011.voting.server.LoginFilter</filter-class>
	</filter>
	
	
	<filter>
		<filter-name>RoleFilter</filter-name>
		<filter-class>de.uni_potsdam.hpi.wfapp2011.voting.server.RoleFilter</filter-class>
	</filter>
	
	
	
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
	<filter-mapping>
		<filter-name>RoleFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>
