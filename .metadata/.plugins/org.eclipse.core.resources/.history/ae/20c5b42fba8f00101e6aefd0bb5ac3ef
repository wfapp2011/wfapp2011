		<% ArrayList<ProjectProposal> dummyProjects = new ArrayList<ProjectProposal>();
		ArrayList<Department> departments= new ArrayList<Department>();
		departments.add(new Department("Fachgebiet XY"));
		departments.add(new Department("Fachgebiet XYZ"));
		departments.add(new Department("Fachgebiet ABC"));
		for (int counter = 1; counter < 15; counter++){
			ProjectProposal dummyProposal = new ProjectProposal("Example Projekt " + counter, 1, counter);
			dummyProposal.setPartnerName("Partner " + counter);
			ArrayList<String> keywords = new ArrayList<String>();
			keywords.add("Keyword 1"); keywords.add("Keyword 2"); keywords.add("Keyword 3");
			dummyProposal.setKeywords(keywords);
			if (counter % 2 == 0){dummyProposal.setIsPublic(true);}
			dummyProposal.setDepartment(departments.get(new Random().nextInt(departments.size())));
			dummyProjects.add(dummyProposal);
		} %>
		<% for (Department department : departments) { %>
		<h3>Projektvorschläge vom Fachgebiet <%= department.getName() %></h3>
